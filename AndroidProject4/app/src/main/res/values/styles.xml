<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sunFlower</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/peter_river</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light">
        <!-- ... -->
    </style>

    <style name="AppTheme.Description">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="AppTheme.Title">
        <item name="android:textColor">@color/peter_river</item>
    </style>

    <style name="AppTheme.Details">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="AppTheme.Values">
        <item name="android:textColor">@color/peter_river</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="AppTheme.Units">
        <item name="android:textColor">@color/sunFlower</item>
    </style>


</resources>
